{% extends 'base.html.twig' %}

{% block title %}Create New Event{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Create New Event</h1>

        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

        <div class="mb-3">
            {{ form_label(form.eventName, 'Event Name', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.eventName, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.eventName) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.description, 'Event Description', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.description) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.registrationLimit, 'Registration Limit', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.registrationLimit, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.registrationLimit) }}
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>

        {{ form_end(form) }}
    </div>
{% endblock %}
