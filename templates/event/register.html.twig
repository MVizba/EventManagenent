{% extends 'base.html.twig' %}

{% block title %}Register for {{ event.eventName }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card p-4" style="max-width: 500px; width: 100%; margin: 0 auto;">
            <h1 class="mb-4 text-center">Register for {{ event.eventName }}</h1>

            {{ form_start(form) }}

            <div class="mb-3">
                {{ form_label(form.name, 'Your Name', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.name) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.email, 'Your Email', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.email) }}
            </div>

            <button type="submit" class="btn btn-primary w-100">Register</button>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
